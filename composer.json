{
	"name": "wikimedia/xmp-reader",
	"description": "Reader for XMP data containing properties relevant to images",
	"license": "GPL-2.0-or-later",
	"homepage": "https://www.mediawiki.org/wiki/XMPReader",
	"authors": [
		{
			"name": "Brian Wolff",
			"email": "bawolff+wn@gmail.com"
		}
	],
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"require": {
		"php": ">=5.5.9",
		"ext-xml": "*",
		"mediawiki/at-ease": "^1.2",
		"psr/log": "^1.0",
		"wikimedia/scoped-callback": "^1.0",
		"wikimedia/timestamp": "^1.0"
	},
	"require-dev": {
		"ext-exif": "*",
		"jakub-onderka/php-parallel-lint": "0.9.2",
		"jakub-onderka/php-console-highlighter": "0.3.2",
		"phpunit/phpunit": "4.8.36 || ^6.5",
		"mediawiki/mediawiki-codesniffer": "16.0.1",
		"mediawiki/minus-x": "0.3.1"
	},
	"scripts": {
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"test": [
			"parallel-lint . --exclude vendor",
			"phpunit --coverage-html coverage",
			"phpcs -p -s",
			"minus-x check ."
		]
	}
}
